@page
@model ExchangeProgram.Pages.DashboardModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@{
    Layout = null;
    string firstName = TempData["FirstName"]?.ToString() ?? "User";
}

<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ExchangeProgram</a>
            <div>
                <span class="navbar-text me-3">Hello @firstName!</span>
                <a class="btn btn-outline-danger btn-sm" href="/Logout">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container mt-4">
        <h2>Manage your account</h2>
        <p>Change your account settings</p>

        <div class="row">
            <!-- Left Sidebar -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="tab">Profile</a>
                    <a href="#email" class="list-group-item list-group-item-action" data-bs-toggle="tab">Email</a>
                    <a href="#password" class="list-group-item list-group-item-action" data-bs-toggle="tab">Password</a>
                    <a href="#personal-data" class="list-group-item list-group-item-action" data-bs-toggle="tab">Personal data</a>
                </div>
            </div>

            <!-- Right Content -->
            <div class="col-md-9">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="profile">
                        <h3>Profile</h3>
                        <form>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" value="user@domain.com" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone number</label>
                                <input type="text" class="form-control" id="phone" placeholder="Enter phone number">
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="email">
                        <h3>Email</h3>
                        <p>Change your email settings here.</p>
                    </div>
                    <div class="tab-pane fade" id="password">
                        <h3>Password</h3>
                        <p>Update your password here.</p>
                    </div>
                    <div class="tab-pane fade" id="personal-data">
                        <h3>Personal Data</h3>
                        <p>Manage your personal data here.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
